<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="?attr/colorPrimaryDark"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/row_color">

        <Button
            android:id="@+id/rateBtn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/payBtn2"
            app:layout_constraintTop_toBottomOf="@+id/pacListRow_de" />

        <Button
            android:id="@+id/payBtn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/pay"
            app:layout_constraintStart_toEndOf="@+id/pacListRow_da"
            app:layout_constraintTop_toBottomOf="@+id/pacListRow_de" />

        <ImageView
            android:id="@+id/reportListRow_iv"
            android:layout_width="123dp"
            android:layout_height="111dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sender2" />

        <TextView
            android:id="@+id/pacListRow_so"
            android:layout_width="242dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:text="TextView"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reportListRow_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pacListRow_de"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:text="TextView"
            android:textColor="#050505"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reportListRow_iv"
            app:layout_constraintTop_toBottomOf="@+id/pacListRow_so"
            app:layout_constraintVertical_bias="0.092" />

        <TextView
            android:id="@+id/pacListRow_da"
            android:layout_width="135dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:text="TextView"
            android:textColor="#050505"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reportListRow_iv"
            app:layout_constraintTop_toBottomOf="@+id/pacListRow_de" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

